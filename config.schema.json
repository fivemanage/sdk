{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "fivemanage-sdk-config-schema",
	"title": "Fivemanage SDK Config Schema",
	"description": "All configuration options for the fivemanage sdk.",
	"type": "object",
	"properties": {
		"$schema": {
			"description": "Schema validation link/path",
			"type": "string",
			"default": "./config.schema.json"
		},
		"logs": {
			"description": "Logs configuration",
			"type": "object",
			"properties": {
				"level": {
					"description": "Default logger level",
					"type": "string",
					"default": "info"
				},
				"levels": {
					"description": "Logger levels to register",
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": ["error", "warn", "info", "debug"]
				},
				"console": {
					"description": "Toggle console logging",
					"type": "boolean",
					"default": false
				},
				"enableCloudLogging": {
					"description": "Should logs be sent to the Fivemanage backend?",
					"type": "boolean",
					"default": true
				},
				"appendPlayerIdentifiers": {
					"description": "Should player identifiers be appended to log metadata? See documentation for more info",
					"type": "boolean",
					"default": true
				},
				"excludedPlayerIdentifiers": {
					"description": "Player identifier types to exclude from appended identifier metadata",
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"discord",
							"fivem",
							"ip",
							"license",
							"license2",
							"live",
							"steam",
							"xbl"
						]
					},
					"default": []
				},
				"excludeInDepthMetadata": {
					"description": "Remove in-depth metadata such as server session ID from logs.",
					"type": "boolean",
					"default": false
				},
			"playerEvents": {
				"description": "Player events like connecting and dropped.",
				"type": "object",
				"properties": {
					"enabled": {
						"description": "Enable player events.",
						"type": "boolean",
						"default": true
					},
					"dataset": {
						"description": "Dataset to use for player events.",
						"type": "string",
						"default": "default"
					}
				},
				"default": { "enabled": true, "dataset": "default" }
			},
			"chatEvents": {
				"description": "Chat events configuration.",
				"type": "object",
				"properties": {
					"enabled": {
						"description": "Enable chat events.",
						"type": "boolean",
						"default": true
					},
					"dataset": {
						"description": "Dataset to use for chat events.",
						"type": "string",
						"default": "default"
					}
				},
				"default": { "enabled": true, "dataset": "default" }
			},
			"txAdminEvents": {
				"description": "txAdmin events configuration.",
				"type": "object",
				"properties": {
					"enabled": {
						"description": "Enable txAdmin events to be logged.",
						"type": "boolean",
						"default": false
					},
					"dataset": {
						"description": "Dataset to use for txAdmin events.",
						"type": "string",
						"default": "default"
					}
				},
				"default": { "enabled": false, "dataset": "default" }
			},
			"oxInventoryEvents": {
				"description": "ox_inventory events configuration.",
				"type": "object",
				"properties": {
					"enabled": {
						"description": "Enable ox_inventory events to be logged.",
						"type": "boolean",
						"default": false
					},
					"dataset": {
						"description": "Dataset to use for ox_inventory events.",
						"type": "string",
						"default": "default"
					}
				},
				"default": { "enabled": false, "dataset": "default" }
			}
			},
			"required": [
				"level",
				"levels",
				"console",
				"enableCloudLogging",
				"appendPlayerIdentifiers",
				"excludedPlayerIdentifiers",
				"playerEvents",
				"chatEvents",
				"txAdminEvents",
				"oxInventoryEvents"
			]
		}
	},
	"required": ["$schema", "logs"]
}
