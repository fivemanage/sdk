{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"noGlobalAssign": "warn",
				"noGlobalEval": "warn",
				"noInvalidUseBeforeDeclaration": "warn",
				"noUnusedImports": "warn",
				"useExportType": "warn",
				"useGroupedTypeImport": "warn",
				"useImportType": "warn",
				"useConsistentArrayType": {
					"level": "warn",
					"options": {
						"syntax": "generic"
					}
				}
			}
		}
	}
}
